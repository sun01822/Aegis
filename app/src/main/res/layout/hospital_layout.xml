<!-- res/layout/hospital_layout.xml -->

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:background="@android:color/white"
    app:cardCornerRadius="15dp"
    android:elevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ImageView for Hospital Image -->
        <ImageView
            android:id="@+id/imageViewHospital"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:contentDescription="Hospital"
            android:scaleType="centerCrop"
            android:src="@drawable/hospital" />

        <!-- TextView for Hospital Name -->
        <TextView
            android:id="@+id/textViewHospitalName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Hospital Name"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <!-- TextView for Address -->
        <TextView
            android:id="@+id/textViewAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp"
            android:text="Hospital Address"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
